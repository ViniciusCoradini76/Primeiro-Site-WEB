@model List<Aluno>

@if (ViewData["MsgErro"] != null)
{
    <div class="alert-danger">
        @ViewData["MsgErro"]
    </div>
}
@if (ViewData["MsgSucesso"] != null)
{
    <div class="alert-success">
        @ViewData["MsgSucesso"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            
            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Matricula</th>
            <th scope="col">Data Nascimento</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Aluno aluno in Model)
            {
                <tr>
                    <td> @aluno.Nome</td>
                    <td> @aluno.Idade</td>
                    <td> @aluno.Matricula</td>
                    <td> @aluno.DataNascimento.Value.ToString("yyyy-MM-dd")</td>



                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-outline-secondary" role="button" asp-controller="Aluno" asp-action="BuscarEndereco" asp-route-cep=@aluno.Cep>Endereco</a>
                        </div>
                    </td>

                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-outline-secondary" role="button" asp-controller="Aluno" asp-action="Editar" asp-route-id=@aluno.Id>Editar</a>
                        </div>
                    </td>

                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-outline-secondary" role="button" asp-controller="Aluno" asp-action="ExcluirAluno" asp-route-id=@aluno.Id>Excluir</a>
                        </div>
                    </td>

                </tr>
            }
        }
        
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-outline-danger" type="button" asp-controller="Aluno" asp-action="Adicionar">adicionar Aluno</a>
</div>